@model AgendaCEP.Models.Contato

@{
    ViewData["Title"] = "Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="card-title h3 mb-3 text-primary">Detalhes do contato</h1>
                    <h4 class="card-subtitle mb-4 text-secondary">Contato</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Nome</dt>
                        <dd class="col-sm-8">@Model.Nome</dd>

                        <dt class="col-sm-4">Telefone</dt>
                        <dd class="col-sm-8">@Model.Telefone</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">CEP</dt>
                        <dd class="col-sm-8">@Model.CEP</dd>

                        <dt class="col-sm-4">Rua</dt>
                        <dd class="col-sm-8">@Model.Rua</dd>

                        <dt class="col-sm-4">Bairro</dt>
                        <dd class="col-sm-8">@Model.Bairro</dd>

                        <dt class="col-sm-4">Cidade</dt>
                        <dd class="col-sm-8">@Model.Cidade</dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">@Model.Estado</dd>

                        <dt class="col-sm-4">Número</dt>
                        <dd class="col-sm-8">@Model.Numero</dd>
                    </dl>
                    <div class="mt-4 text-center">
                        <a asp-action="Edit" asp-route-id="@Model.ContatoId" class="btn btn-primary me-2">Editar</a>
                        <a asp-action="Index" class="btn btn-link text-decoration-none">Voltar para lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>