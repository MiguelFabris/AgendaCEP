@model AgendaCEP.Models.Contato

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-danger">
                <div class="card-body">
                    <h1 class="card-title h3 mb-3 text-danger">Excluir contato</h1>
                    <h4 class="card-subtitle mb-4 text-secondary">Tem certeza que deseja excluir este contato?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Nome</dt>
                        <dd class="col-sm-8">@Model.Nome</dd>

                        <dt class="col-sm-4">Telefone</dt>
                        <dd class="col-sm-8">@Model.Telefone</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">CEP</dt>
                        <dd class="col-sm-8">@Model.CEP</dd>

                        <dt class="col-sm-4">Rua</dt>
                        <dd class="col-sm-8">@Model.Rua</dd>

                        <dt class="col-sm-4">Bairro</dt>
                        <dd class="col-sm-8">@Model.Bairro</dd>

                        <dt class="col-sm-4">Cidade</dt>
                        <dd class="col-sm-8">@Model.Cidade</dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">@Model.Estado</dd>

                        <dt class="col-sm-4">Número</dt>
                        <dd class="col-sm-8">@Model.Numero</dd>
                    </dl>
                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="ContatoId" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">Excluir</button>
                            <a asp-action="Index" class="btn btn-link text-decoration-none">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>